


<!-- Modal -->
<div id="addQuestion" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addQuestionLabel" aria-hidden="true">
  <form action="/statements" method="POST" id="add-question">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="addQuestionLabel">Add Question</h3>
  </div>
  <div class="modal-body">
 <div>
  <textarea name="question" id="question" placeholder="Enter your question here..."></textarea>
 </div>
 <div>
  <input type="radio" name="answer" value="true">
  <label for="true" >true</label>
  <input type="radio" name="answer" value="false">
  <label for="false" >false</label>
 </div>

  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</form>
</div>


<div class="row-fluid"><h1>Feeling Lucky?</h1></div>
<div class="row-fluid"><h3>Play true or false!</h3></div>

  <div class="row-fluid">
    <a href="#addQuestion" role="button" class="btn offset8" data-toggle="modal">Add Question</a>
  </div>

 <div class="row-fluid">
  <ul id="questions" class="span8 offset2">
  <% @statements.each do |statement| %>
    <li class="row-fluid">
      <p><%= statement.question %></p>
      <a href="#">true</a> <a href="#">false</a>
    </li>
  <% end %>
</ul>
</div>



